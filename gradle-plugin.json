{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>DanySK/renovate-config"
  ],
  "packageRules": [
    {
      "description": "Trigger a patch update on Gradle and Kotlin upgrades",
      "matchPackageNames": [
        "gradle",
        "org.jetbrains.kotlin.jvm",
        "org.jetbrains.dokka"
      ],
      "semanticCommitType": "fix"
    }
  ]
}
