{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>DanySK/kotlin"
  ],
  "packageRules": [
    {
      "description": "Trigger a patch update on Gradle and Kotlin upgrades",
      "matchPackageNames": [
        "gradle",
        "org.jetbrains.kotlin.jvm",
        "org.jetbrains.dokka",
        "org.jetbrains.kotlin:kotlin-gradle-plugin",
        "kotlin-monorepo"
      ],
      "semanticCommitScope": "core-deps"
    }
  ]
}
